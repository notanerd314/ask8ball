{
  "compilerOptions": {
    "target": "ES2020",             // Target ECMAScript version (can be ES2020, ES2019, ESNext, etc.)
    "lib": ["ES2020", "DOM"],       // Include standard DOM library for browser support
    "module": "ES2020",           // Module system to use (CommonJS for Node.js)
    "moduleResolution": "Node",     // Module resolution strategy (Node for Node.js environments)
    "esModuleInterop": true,        // Enables compatibility between CommonJS and ESModules
    "forceConsistentCasingInFileNames": true,  // Ensures file names are case-sensitive across imports
    "strict": true,                 // Enable all strict type-checking options
    "skipLibCheck": true            // Skip type checking of declaration files (can improve build time)
  }
}
